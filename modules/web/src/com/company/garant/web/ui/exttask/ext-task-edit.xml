<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        xmlns:thesis="http://schemas.haulmont.com/thesis/thesis-window.xsd"
        xmlns:ext="http://schemas.haulmont.com/cuba/window-ext.xsd"
        class="com.company.garant.web.ui.exttask.ExtTaskEditor"
        extends="com/haulmont/thesis/web/ui/task/task-edit.xml"
        messagesPack="com.company.garant.web.ui.exttask">
    <dsContext>
        <datasource id="cardDs" class="com.company.garant.entity.ExtTask"/>
    </dsContext>
    <layout>
        <hbox id="mainPane">
            <tabSheet id="tabsheet">
                <tab id="mainTab">
                    <groupBox id="taskInfoGroupBox">
                        <scrollBox id="infoScrollBox">
                            <vbox id="infoVBox">
                                <hbox id="mainGridBox">
                                    <grid id="rightGrid">
                                        <rows>
                                            <row id="creditOrderRow">
                                                <pickerField datasource="cardDs" property="creditOrder"
                                                             caption="msg://com.company.garant.entity/ExtTask.creditOrder"
                                                             width="theme://thesis.gui.editor-fields.width"/>
                                            </row>
                                        </rows>
                                    </grid>
                                </hbox>
                            </vbox>
                        </scrollBox>
                    </groupBox>
                </tab>
            </tabSheet>
        </hbox>
    </layout>
</window>
